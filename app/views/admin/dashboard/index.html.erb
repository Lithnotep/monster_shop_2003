<h1 align = "center">Admin Dashboard</h1>
<section class = "grid-container">
  <h2>Packaged:</h2>
  <% @orders.each do |order|%>
    <% if order.status == "packaged" %>
    <section class = "grid-item">
      <h2><%= "Order: #{order.id}" %></h2>
      <p>User: <%= link_to "#{order.user.name}", "/admin/users/#{order.user.id}" %></p>
      <p><%="Created on: #{order.created_at}"%></p>
      <% if order.status == "packaged" %>
        <%=button_to("Ship", "/orders/#{order.id}/ship", method: "patch")%>
      <% end %>

    </section>
    <% end %>
  <% end %>
  <h2>Pending:</h2>
  <% @orders.each do |order|%>
