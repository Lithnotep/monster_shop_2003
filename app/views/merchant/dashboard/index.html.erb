<h1 align = "center">Merchant Dashboard</h1>
  <h2 align = "center"><%= @merchant.name %></h2>
  <p align = "center"><%= @merchant.address %></p>
  <p align = "center"><%= @merchant.city %>, <%= @merchant.state %>, <%= @merchant.zip %></p>

  <ul><%= link_to "Your Items", "/merchant/items" %></ul>

<h3>Pending Orders:</h3>

  <% @merchant.pending_orders.each do |order| %>
  <section id = "order-<%=order.id%>">
  <h2 align = "center">Order Info</h2>
  <center>
    <table>
      <tr>
        <th>Order Id</th>
        <th>Quantity</th>
      </tr>
      <tr>
          <td><p><%=link_to "#{order.id}", "/merchant/orders/#{order.id}"%></p></td>
          <td><p><%= order.total_quantity %></p></td>
      </tr>
  </table>
  <section id="datecreated">
    <p>Created: <%= order.created_at%></p>
  </section>

  <section id="grandtotal">
    <p>Grand Total: <%=number_to_currency(order.grandtotal)%></p>
  </section>
  </section>
  <% end %>
