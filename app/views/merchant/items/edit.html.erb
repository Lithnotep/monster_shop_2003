<h1>Edit <%=link_to @item.name, "/items/#{@item.id}" %></h1>

<center>
  <%= form_for [:merchant, @item] do |f|  %>
    <%= f.label :name %>
    <%= f.text_field :name%>

    <%= f.label :description %>
    <%= f.text_field :description %>

    <%= f.label :price %>
    <%= f.text_field :price %>

    <%= f.label :image %>
    <%= f.text_field :image %>

    <%= f.label :inventory %>
    <%= f.text_field :inventory %>

    <%= f.submit %>
  <% end %>
</center>
